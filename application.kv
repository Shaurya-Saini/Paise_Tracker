<Rec_Page>:
    name: "Rec"
    background_color: [0, 0, 0, 1]
    BoxLayout:
        orientation: "vertical"
        spacing: "10dp"
        Label:
            text: "Paise Tracker App"
            font_size: "24dp"
            # size_hint: width,height
            size_hint: 1,None
            height: "40dp"
        BoxLayout:
            orientation:"horizontal"
            Button:
                text: "Show\nRecords"
                font_size: "20dp"
                on_release:
                    app.root.current = "Display"
                    root.manager.transition.direction= "right"
            Button:
                text: "Delete\nRecord"
                font_size: "20dp"
                on_release:
                    app.root.current = "Delete"
                    root.manager.transition.direction = "left"
        Button:
            text: "Home"
            font_size: "20dp"
            on_release: 
                app.root.current = "Home"
                root.manager.transition.direction = "down"

<Display_Page>:
    name: "Display"
    background_color: [0, 0, 0, 1]
    BoxLayout:
        orientation: "vertical"
        spacing: "10dp"
        Label:
            text: "Paise Tracker App"
            size_hint: 1, None
            height: "40dp"
            font_size: "24dp"
        
        BoxLayout:
            orientation: "horizontal"
            size_hint_y: None
            height: "40dp"
            spacing: "10dp"

            Spinner:
                id: record_spinner
                text: "Expense"
                values: ["Income", "Expense"]
                on_text: root.filter_records()

            Spinner:
                id: type_spinner
                text: "All"
                values: ["All","Education","Food","Entertainment","Groceries","Savings","Other"]
                #size_hint_x: None
                #width: "100dp"
                on_text: root.filter_records()

            Spinner:
                id: date_spinner
                text: "All Dates"
                values: ["All Dates", "Today", "This Week", "This Month"]
                #size_hint_x: None
                #width: "100dp"
                on_text: root.filter_records()

            Spinner:
                id: person_filter
                text: "All"
                values:["All","Pooja","Shaurya","Both"]
                on_text:root.filter_records()

        ScrollView:
            size_hint: 1, 1
            do_scroll_x: True 
            do_scroll_y: True  

            GridLayout:
                id: display_grid
                cols: 6 
                size_hint_y: None
                size_hint_x: None
                col_force_default: True
                col_default_width: "120dp"
                width: self.minimum_width 
                row_force_default: True
                row_default_height: "30dp"
                height: self.minimum_height

                Label:
                    text: "ID"
                    bold: True
                    font_size: "20dp"
                    width: "100dp"
                Label:
                    text: "Date"
                    bold: True
                    font_size: "20dp"
                Label:
                    text: "Amount"
                    bold: True
                    font_size: "20dp"
                Label:
                    text: "Type"
                    bold: True
                    font_size: "20dp"
                Label:
                    text: "Note"
                    bold: True
                    font_size: "20dp"


        Button:
            text: "Go Back"
            font_size: "20dp"
            size_hint_y: None
            height: "50dp"
            on_release: 
                app.root.current = "Rec"
                root.manager.transition.direction = "right"


<Delete_Page>:
    name: "Delete"
    background_color: [0, 0, 0, 1]
    BoxLayout:
        orientation: "vertical"
        spacing: "10dp"
        Label:
            text: "Paise Tracker App"
            font_size: "24dp"
            size_hint: 1,None
            height: "40dp"
        BoxLayout:
            size_hint: 1,.4
            Label:
                text: "Type"
                font_size: "20dp"
            Spinner:
                id: type_del
                text: "Type"
                font_size: "20dp"
                values: ["Income","Expence"]
                on_text: root.type_click(type_del.text)

        BoxLayout:
            size_hint: 1,.4
            Label:
                text: "Id"
                font_size: "20dp"
            TextInput:
                id: del_id
                multiline: False
                font_size: "20dp"
        Button:
            text: "Delete"
            font_size: "20dp"
            on_release: root.delete_rec()

        Button:
            text: "Go Back"
            font_size: "20dp"
            on_release:
                app.root.current = "Rec"
                root.manager.transition.direction = "right"
