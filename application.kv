WinMan:
    Home:
    Exp_Page:
    Inc_Page:
    Rec_Page:
    Display_Page:
    Delete_Page:


<SpinnerOption>:
    background_normal: ""
    background_color: [0.5,0.5,0.5,1]
    color: [1,1,1,1]

    font_size: "20dp"


<Home>:
    name:"Home"
    background_color: [0, 0, 0, 1]
    BoxLayout:
        orientation: "vertical"
        spacing: "10dp"
        Label:
            text: "Paise Tracker App"
            font_size: "24dp"
            size_hint: 1,None
            height: "40dp"
        Button:
            text: "Add expence"
            font_size: "20dp"
            size_hint: .8,1
            # x, center_x, right - only one is usable
            # y, center_y, top
            pos_hint: {"center_x":.5}
            #on_press: root.add_exp_click()
            on_release: 
                app.root.current = "Exp"
                root.manager.transition.direction = "left"
        Button:
            text: "Add income"
            font_size: "20dp"
            size_hint: .8,1
            pos_hint: {"center_x":.5}
            on_release: 
                app.root.current = "Inc"
                root.manager.transition.direction = "right"
        Button:
            text: "Records"
            font_size: "20dp"
            size_hint: .8,1
            pos_hint: {"center_x":.5}
            on_release: 
                app.root.current = "Rec"
                root.manager.transition.direction = "up"


<Exp_Page>:
    name: "Exp"
    background_color: [0, 0, 0, 1]
    BoxLayout:
        orientation: "vertical"
        spacing: "10dp"
        Label:
            text: "Paise Tracker App"
            font_size: "24dp"
            size_hint: 1,None
            height: "40dp"
        BoxLayout:
            size_hint: 1,.4
            Label:
                text: "Amount"
                font_size: "20dp"
            TextInput:
                id: amt_inp
                multiline: False
                font_size: "20dp"
        BoxLayout:
            size_hint: 1,.4
            Label:
                text: "Type"
                font_size: "20dp"
            Spinner:
                id: type_exp
                text: "Type"
                font_size: "20dp"
                values: ["Education","Food","Entertainment","Groceries","Savings","Other"]
                on_text: root.type_click(type_exp.text)
                

        BoxLayout:
            #spacing: "20db"
            size_hint: 1,.4
            Label:
                text: "Note"
                font_size: "20dp"
                #font_size = 32
            TextInput:
                id: note_inp
                multiline: False
                font_size: "20dp"
        
        BoxLayout:
            size_hint:1,.4
            Label:
                text: "Who?"
                font_size: "20dp"
            Spinner:
                id: person
                text: "Who?"
                font_size: "20dp"
                values: ["Pooja","Shaurya","Both"]
                on_text: root.type_click2(person.text)

        Button:
            text: "Add"
            font_size: "20dp"
            on_release: root.add_expence()
        Button:
            text: "Home"
            font_size: "20dp"
            on_release: 
                app.root.current = "Home"
                root.manager.transition.direction = "right"
    
