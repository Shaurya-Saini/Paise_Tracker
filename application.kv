<Rec_Page>:
    name: "Rec"
    BoxLayout:
        orientation: "vertical"
        spacing: "10dp"
        Label:
            text: "Paise Tracker App"
            # font_size = "40dp"
            # size_hint: width,height
            size_hint: 1,None
            height: "40dp"
        Label:
            text: "Show Records"
            font_size: 32
        Button:
            text: "Home"
            on_release: 
                app.root.current = "Home"
